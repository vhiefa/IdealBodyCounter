<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#9c9cfc"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textStyle="bold"
        android:text="Welcome!"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/timbangan"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_menuactivity_hitung"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Hitung BMI"
        android:onClick="menuHitung"/>

    <Button
        android:id="@+id/btn_menuactivity_tentang"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Tentang BMI"
        android:onClick="menuTentang"/>

</LinearLayout>